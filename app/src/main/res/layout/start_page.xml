<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.android.quizapp.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorStartBackground"
        android:padding="@dimen/startPagePadding">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/startPageElementsMargin"
            android:layout_marginBottom="@dimen/startPageElementsMargin"
            android:scaleType="center"
            android:src="@drawable/light_bulb"/>

        <EditText
            android:id="@+id/enterName"
            style="@style/editTextStyle"
            android:layout_margin="@dimen/startPageElementsMargin"
            android:inputType="textPersonName|textCapWords"
            android:maxLines="1"
            android:maxLength="30"
            android:hint="@string/nameHint"/>

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/startPageElementsMargin"
            android:text="@string/startButton"
            android:onClick="startQuiz"/>
    </LinearLayout>

</ScrollView>